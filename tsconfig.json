{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["dom"],
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [{ "name": "typescript-styled-plugin" }]
  },
  "include": ["**/*", ".storybook/**/*"]
}
